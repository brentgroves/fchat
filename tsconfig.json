{
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "compilerOptions": {
    "target": "es2020",
    "outDir": "./lib",
    "rootDir": "./src",
    "esModuleInterop": true,
    "module": "commonjs",
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,            /* Ensure that casing is correct in imports. */
    "strict": true,
    "skipLibCheck": true,                                 /* Skip type checking all .d.ts files. */
    "declaration": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "test"
  ]
}